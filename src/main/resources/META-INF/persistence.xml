<?xml version="1.0" encoding="UTF-8"?>
<persistence>

    <persistence-unit name="PSPU" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:jboss/datasources/PS</jta-data-source>
        <properties>
            <property name="hibernate.show_sql" value="false"/>
        </properties>
    </persistence-unit>
</persistence>